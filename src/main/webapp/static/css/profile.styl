.datepicker-simple
  width 470px !important
  th.next
    text-align right !important
  th.dow
    text-align center !important
  .year
  .month
    margin 0 5px

.save-status
  color #62c462
  display none
  margin-left 10px
  font-size 16px
  vertical-align middle

.save-status.active
  display inline-block

.loading
  width 40px

@media all and (max-width: 1024px)
  .user-descr
    .ava-area
      width 120px
      .fa
        font-size 20px





