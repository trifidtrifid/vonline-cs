
.counters
  min-height 300px
  h3
    margin-top 0
    padding-top 10px
  .counters-menu
    padding-left 0
    margin 0
    li
      list-style none
      display inline-block
  .counters-table
    width 100%
    margin 10px 0
    td
      // border 1px solid #000
      padding 5px 0 5px 10px
      vertical-align top
      input
      select
        width 100%
    thead
      font-weight bold
    .remove-counter
      color #ff0000
      font-size 22px
      &:hover
        text-decoration none
    .fa-pencil
      font-size 18px
  .counter-input
    width 70px !important
    display inline-block
  .fa-clock-o
    font-size 18px
    margin-left 10px
  .error-info
    position relative
    left 10px
    top 3px

.counters-no-period
  font-size 16px
  text-align center
  color #ff0000
  padding-top 25px

.modal-remove-counter
  .modal-dialog
    width 330px !important
    text-align center
    padding 10px
    margin-top 100px
  .btn
    display inline-block





