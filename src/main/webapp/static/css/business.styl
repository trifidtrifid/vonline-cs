
.business-logout
  color #fff
  margin 12px 20px 0 0
  &:hover
    text-decoration none
    color #fff

.cabinet-left
.carousel-inner
  width 350px
  height 260px
  line-height 260px
  text-align center
  img
    max-width 100%
    max-height 100%
    display inline-block !important
    vertical-align middle
.cabinet-right
  margin-left 360px
  font-size 16px

.cabinet-left .carousel-control
  background-image none
.carousel-control .glyphicon
  font-family Arial, sans-serif
.carousel-control span
  margin-top -15px
  cursor pointer
.carousel-control.left span
  left 10px
.carousel-control.right span
  left auto
  right 10px
.carousel-control span:before
  font normal normal normal 14px/1 FontAwesome
  font-size 30px
  margin-top -15px
.carousel-control.left span:before
  content "\f053"
.carousel-control.right span:before
  content "\f054"
.carousel-indicators
  line-height 20px
  bottom 0

.cabinet-edit
  font-size 14px
  label
    display block
    span
      display inline-block
      width 150px
    input
      display inline-block
      width 300px
  textarea
    display block
    width 100%
    height 60px
  .cabinet-descr
    margin-bottom 10px
  .load-avatar
    margin-left 15px
    width auto
    padding 10px 15px
    input
      display none
  .logo
  .images
    margin-top 5px
    margin-bottom 10px
    min-width 150px
    img
      width 100%
      margin-bottom 10px
  .images
    width 300px

.statistic-analytics
  font-size 15px
  margin-bottom 10px
