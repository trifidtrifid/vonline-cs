// header
.navbar-container
  text-align center
  .navbar-brand img
    width 170px

.navbar .form-search
  width 40%
  margin 5px 0 0 200px
  .icon-search
    &:hover
      text-decoration none

.ace-nav>li
  a
    padding 11px 12px 0 12px
    line-height 1.428571429
    font-size 16px
    border none
    border-bottom 3px solid rgb(111, 179, 224)
  &.active
    a
      border-bottom-color #2b7dbc

.ace-nav .user-menu
  right 0 !important

.dropdown-menu.user-menu
  display block

.ace-nav .user-info
  max-width none

.ace-nav>.user-short a
  border none
  padding 3px 8px
  font-size 14px
  text-align left

.ace-nav>.user-short>a
  line-height inherit
  padding 0 8px
  font-size 16px

.ace-nav li:last-child .icon-caret-down
  position relative
  top -10px

.ace-nav .nav-user-photo
  border 0
  width 35px
  height 35px
  background-repeat no-repeat
  background-size cover
  background-position 50% 50%
  display inline-block
  margin-top 5px
  border-radius 0

.nav-list > li
  border 0

.nav-list > li > a
  padding 8px 10px 10px 16px
  height auto
  line-height 20px
  position relative
  background none
  span
    display inline-block
    vertical-align middle
    width 166px
    &.new-message-count
      width auto
      font-size 14px
  b
    display inline-block
    vertical-align middle

.nav-list > li > a,
.nav-list > li.active > a,
.nav-list > li.active:hover a
  font-size 15px

.nav-list > li.active > a
.nav-list > li.active:hover a
  font-weight normal !important
  &:before
    display none

.nav-list > li:hover>a
.nav-list > li.active:hover>a
  background #f2f2f2

