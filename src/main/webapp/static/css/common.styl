.rubrics-menu
  &:before
    content: "";
    display: block;
    position: absolute;
    z-index: 1;
    left: 8px;
    top: 40px;
    bottom: 0;
    border: 1px dotted #9dbdd6;
    border-width: 0 0 0 1px;
  li
    a
      padding 5px 0 5px 25px
      cursor pointer
      &:before
        content: "";
        display: inline-block;
        position: absolute;
        width: 7px;
        left: 10px;
        top: 17px;
        border-top: 1px dotted #9dbdd6
    &:hover
      a
        background-color transparent
        color #000
      .icon-double-angle-right
        display block
    &.active a
      background #f2f2f2
      color #1963aa
  .icon-double-angle-right
    position absolute
    top 7px
    left 11px
    display none

