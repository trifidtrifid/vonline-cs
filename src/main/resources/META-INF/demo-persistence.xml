        <class>com.vmesteonline.be.jdo2.dialog.VoDialogMessage</class>
        <class>com.vmesteonline.be.jdo2.utility.VoCounter</class>
        <class>com.vmesteonline.be.jdo2.VoMulticastMessage</class>
        <class>com.vmesteonline.be.jdo2.business.VoBusiness</class>
        
        <exclude-unlisted-classes/>
        <properties>
            <!-- PRODUCTION DATABASE VONLINE
            <property name="javax.jdo.option.ConnectionURL" value="jdbc:mysql://127.0.0.1/vonline?useServerPrepStmts=false&amp;useUnicode=true&amp;characterEncoding=utf8&amp;connectionCollation=utf8_general_ci"/>
            <property name="javax.jdo.option.ConnectionUserName" value="vonline"/>
            <property name="javax.jdo.option.ConnectionPassword" value="vonline"/>
-->
            <!-- DEMO database -->
            <property name="javax.jdo.option.ConnectionURL" value="jdbc:mysql://127.0.0.1/demo?useServerPrepStmts=false&amp;useUnicode=true&amp;characterEncoding=utf8&amp;connectionCollation=utf8_general_ci"/>
            <property name="javax.jdo.option.ConnectionUserName" value="demo"/>
            <property name="javax.jdo.option.ConnectionPassword" value="demo"/>

            <property name="javax.jdo.option.ConnectionDriverName" value="com.mysql.jdbc.Driver"/>
            <property name="javax.jdo.option.Mapping" value="mysql"/>
            <property name="datanucleus.schema.autoCreateAll" value="true"/>
        </properties>
    </persistence-unit>

