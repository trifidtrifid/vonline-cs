        <class>com.vmesteonline.be.jdo2.VoPoll</class>
        <class>com.vmesteonline.be.jdo2.VoRubric</class>
        <class>com.vmesteonline.be.jdo2.VoSession</class>
        <class>com.vmesteonline.be.jdo2.VoTopic</class>
        <class>com.vmesteonline.be.jdo2.VoUser</class>
        <class>com.vmesteonline.be.jdo2.VoUserGroup</class>
